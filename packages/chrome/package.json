{
	"name": "hanashi-chrome",
	"version": "1.2.0",
	"description": "Chrome extension for Japanese TTS with realistic voices.",
	"scripts": {
		"dev": "VITE_CJS_TRACE=true vite",
		"build": "vite build --mode development",
		"build:watch": "vite build --mode development --watch",
		"build:prod": "vite build --mode production",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"package": "npm run build:prod && cd dist && zip -r ../nihongo-speech-extension.zip ."
	},
	"dependencies": {
		"chrome-types": "^0.1.357",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/chrome": "^0.0.244",
		"@types/node": "^22.15.21",
		"@types/react": "^18.2.14",
		"@types/react-dom": "^18.2.7",
		"@vitejs/plugin-react": "^4.2.0",
		"@vitest/ui": "^3.1.4",
		"autoprefixer": "^10.4.16",
		"happy-dom": "^17.4.7",
		"postcss": "^8.4.31",
		"tailwindcss": "^3.4.1",
		"typescript": "^5.4.0",
		"vite": "^5.2.0",
		"vitest": "^3.1.4"
	}
}
