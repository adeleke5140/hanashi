{
  "manifest_version": 3,
  "name": "Nihongo Speech",
  "version": "1.0.0",
  "description": "Convert Japanese sentences to realistic male and female speech using advanced TTS APIs.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
} 